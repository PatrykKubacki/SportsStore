@using SportsStore.Domain.Data
@model User

@{
    ViewBag.Title = "Rejestracja";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" href="~/Content/bootstrap.css"/>
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css"/>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css"/>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Logowanie</a>
        </div>
        <div>@HttpContext.Current.User.Identity.Name</div>
    </div>
</nav>
<div class="panel">
    <div class="panel-heading">
        <h3> Zarejestruj się</h3>
    </div>
    <div class="panel-body">


        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            @Html.HiddenFor(l => l.Id)
            @Html.HiddenFor(l => l.RoleId)
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Nazwa użytkownika:</label>
                        @Html.TextBoxFor(l => l.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Hasło:</label>
                        @Html.PasswordFor(l => l.Password, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Imie</label>
                        @Html.TextBoxFor(l => l.FirstName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Nazwisko</label>
                        @Html.TextBoxFor(l => l.LastName, new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Numer telefonu:</label>
                        @Html.TextBoxFor(l => l.Phone, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Miasto:</label>
                        @Html.TextBoxFor(l => l.Address.City.Name, new { @class = "form-control" })
                    </div>
                    @Html.HiddenFor(l => l.Address.CityId)
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Kod-pocztowy</label>
                        @Html.TextBoxFor(l => l.Address.Code, new { @class = "form-control" })
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Numer domu/mieszkania</label>
                        @Html.TextBoxFor(l => l.Address.Number, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Ulica</label>
                        @Html.TextBoxFor(l => l.Address.Street, new { @class = "form-control" })
                    </div>
                    @Html.HiddenFor(l => l.AddressId)
                </div>
            </div>

            <input type="submit" value="Zarejestruj" class="btn btn-primary" />
            @Html.ActionLink("Wróć do przeglądania sklepu", "List", "Product", null, new { @class = "btn btn-warning" })

        }
                <br />

            </div>
            </div>
</body>
</html>