@using SportsStore.WebUI.Models
@model LoginViewModel

@{
    ViewBag.Title = "Logowanie";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <link rel="stylesheet" href="~/Content/bootstrap.css"/>
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css"/>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css"/>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Logowanie</a>
        </div>
        <div>@HttpContext.Current.User.Identity.Name</div>
    </div>
</nav>
<div class="panel">
    <div class="panel-heading">
        <h3> Zaloguj się</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()
                    <div class="form-group">
                        <label>Nazwa użytkownika:</label>
                        @Html.TextBoxFor(l => l.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Hasło:</label>
                        @Html.PasswordFor(l => l.Password, new { @class = "form-control" })
                    </div>
                    <input type="submit" value="Zaloguj" class="btn btn-primary" />
                    @Html.ActionLink("Wróć do przeglądania sklepu", "List", "Product", null, new { @class = "btn btn-warning" })<br/>
                }
                <br/>
            </div>
                @Html.ActionLink("zapomnialeś hasła", "ForgottenPassword","Account", null, new { @class = "btn btn-danger" })<br />
                </div>
            </div>
</div>
</body>
</html>