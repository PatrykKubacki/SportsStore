@using SportsStore.Domain.Data
@model User
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width initial-scale=1.0"/>
    <link rel="stylesheet" href="~/Content/bootstrap.css"/>
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css"/>
    <link rel="stylesheet" href="~/Content/Site.css"/>
    <title>@ViewBag.Title</title>
</head>
<body>
<div class="navbar navbar-inverse">
    <a class="navbar-brand" href="#">
        <span class="hidden-xs">Sklep sportowy</span>
        <div class="visible-xs">Sklep</div>
        <div class="visible-xs">Sportowy</div>
    </a>
    <ul class="nav navbar-nav navbar-right">
        @{
            if (HttpContext.Current.User.Identity.IsAuthenticated) {
                var userName = HttpContext.Current.User.Identity.Name;
                <li> @Html.ActionLink(userName, "Login", "Account", null, new { @class = "navbar-btn" })</li>
                <li>@Html.ActionLink("Wyloguj", "Logout", "Account", null, new { @class = "navbar-btn" })</li>
            } else {
                <li>
                    <a href="@Url.Action("Register", "Account")" class="nav navbar-btn">
                        Rejestracja
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Login", "Account")" class="nav navbar-btn">
                        Zaloguj
                        <span class="glyphicon glyphicon-log-in" aria-hidden="true"></span>
                    </a>
                </li>
            }
        }
    </ul>
</div>

<div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-4">

        <table class="table table-bordered">
            <thead>
            <tr>
                <th>Imie</th>
                <th>@Model.FirstName</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>Nazwisko</td>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <td>Adres E-mail</td>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <td>Rola</td>
                <td>@Model.Role.Name</td>
            </tr>
            <tr>
                <td>Adres</td>
                <td>@Model.Address.Street</td>
            </tr>
            <tr>
                <td>Telefon</td>
                <td>@Model.Phone</td>
            </tr>
            </tbody>
        </table>

        @(HttpContext.Current.User.IsInRole("Administrator")
              ? Html.ActionLink("Przejdz do panelu administracyjnego", "Index", "Product", null, new { @class = "btn btn-primary" })
              : Html.ActionLink("Przejdz do zakupów", "List", "Product", null, new { @class = "btn btn-primary" }))

        @Html.ActionLink("Zmień swoje dane", "", null, new { @class = "btn btn-primary" })
    </div>
</div>
</body>
</html>