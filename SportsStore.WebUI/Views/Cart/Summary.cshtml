@using System.Globalization
@using SportsStore.Domain.Data
@model Cart

<div class="navbar-right hidden-xs">
	@Html.ActionLink("Zamów", "Index", "Cart",
					new { returnUrl = Request.Url.PathAndQuery },
					new { @class = "btn btn-default navbar-btn navbar-text", Style="color:#000000;" })
</div>
<div class="navbar-right visible-xs">
	<a href="@Url.Action("Index", "Cart", new { returnUrl = Request.Url.PathAndQuery })" class="btn btn-default navbar-btn">
		<span class="glyphicon glyphicon-shopping-cart"></span>
	</a>
</div>
<div class="nav navbar-nav navbar-right navbar-btn" >
    <span class="navbar-text" id="summary">
        <b class="hidden-xs">Twój koszyk:</b>
        @Model.Lines.Sum(x => x.Quantity) sztuk,
        @Model.ComputeTotalValue().ToString("C", CultureInfo.CreateSpecificCulture("pl-pl"))
    </span>
</div>